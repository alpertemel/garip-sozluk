@{
    ViewData["Title"] = "DetailSearchHeader";
}
<form class="" method="post" asp-controller="Search" asp-action="DetailSearchHeader">
    <div class="form-group">
        <label for="starts_at">Header Oluşturma Tarihi</label>
        <input class="form-control" placeholder="" name="create" type="datetime-local" id="starts_at">
    </div>
    <row>
        <div class="form-group">
            <label for="exampleSelectGender">Kategori</label>
            <select class="form-control" name="categoryid" asp-items="ViewBag.HeaderCategoryList">
            </select>
        </div>
    </row>
    <input type="text" class="form-control" placeholder="Başlık İsmi...." name="text">
    <row>
        <button type="submit" class="btn btn-primary btn-rounded btn-fw align-self-md-center">Ara</button>
    </row>
</form>
@if (ViewBag.DetailSearchResult != null)
{
    @foreach (var item in ViewBag.DetailSearchResult)
    {
                    <div>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Oluşturma Tarihi</th>
                                        <th>Kategori ID</th>
                                        <th>Title</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@item.CreateDate</td>
                                        <td>@item.CategoryId</td>
                                        <td>@item.Title</td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>

    }
}

